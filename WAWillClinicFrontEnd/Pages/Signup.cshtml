@model WAWillClinicFrontEnd.Pages.SignupModel;
@{
    Layout = "_Layout";
}

<h2>Sign Up</h2>

<p class="content">If you would like to join the Will Clinic, please sign up below.</p>
<br/><br />
	 <form method="post" class="content" style="text-align:left">
	 	<label asp-for="Name">Full Legal Name</label>
	 	<input type="text" name="Name" required placeholder="Full Name" title="Please input full name." />
