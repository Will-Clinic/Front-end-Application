	 <br />
	 <label asp-for="Email">Email Address</label>
	 <input type="email" name="Email" required placeholder="Email Address" title="Please input an email address" />
	 <br />
	 <label asp-for="IsVeteran">Are you, or your spouse, a veteran of the United States Armed Forces?</label>@*change input/asp-for labels, make Yes or No option*@
	 <input type="text" name="IsVeteran" required placeholder="Are you, or your spouse, a veteran?" title="Please select yes or no." />
	 <br />
	 <label asp-for="HasProofOfService">Do you have proof of military service?</label>@*change input/asp-for labels, make Yes or No option*@
	 <input type="text" name="HasProofOfService" required placeholder="Do you have proof of military service?" title="Please select yes or no." />
	 <br />
	 <label asp-for="IsWashingtonResident">Are you a Washington state resident?</label>@*change input/asp-for labels, make Yes or No option*@
	 <input type="text" name="IsWashingtonResident" required placeholder="Are you a Washington state resident" title="Please select yes or no." />
