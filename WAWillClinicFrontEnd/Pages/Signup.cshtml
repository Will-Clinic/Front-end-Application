@page
@model WAWillClinicFrontEnd.Pages.SignupModel;
@{
    Layout = "_Layout";
}

<h2>Sign Up</h2>

<p class="content">If you would like to join the Will Clinic, please sign up below.</p>
<br/><br />
	 <form method="post" class="content" style="text-align:left">
	 	<label asp-for="Name">Full Legal Name</label>
	 	<input type="text" name="Name" required placeholder="Full Name" title="Please input full name." />
	 	<br />
	 	<label asp-for="Address">Address</label>@*change input/asp-for labels*@
	 <input type="text" name="Address" required placeholder="Address" title="Please input an address." />
	 <br />
	 <label asp-for="Phone">Phone Number</label>
	 <input type="tel" name="Phone" required pattern="[0-9]{10}" placeholder="Phone Number" title="Please input a phone number" />
	 <br />
	 <label asp-for="Email">Email Address</label>
	 <input type="email" name="Email" required placeholder="Email Address" title="Please input an email address" />
	 <br />
	 <label asp-for="IsVeteran">Are you, or your spouse, a veteran of the United States Armed Forces?</label>@*change input/asp-for labels, make Yes or No option*@
	 <input type="text" name="IsVeteran" required placeholder="Are you, or your spouse, a veteran?" title="Please select yes or no." />
	 <br />
	 <label asp-for="HasProofOfService">Do you have proof of military service?</label>@*change input/asp-for labels, make Yes or No option*@
	 <input type="text" name="HasProofOfService" required placeholder="Do you have proof of military service?" title="Please select yes or no." />
	 <br />
	 <label asp-for="IsWashingtonResident">Are you a Washington state resident?</label>@*change input/asp-for labels, make Yes or No option*@
	 <input type="text" name="IsWashingtonResident" required placeholder="Are you a Washington state resident" title="Please select yes or no." />
	 <br />
	 <label asp-for="IsNetWorthLowEnough">Is your net worth less than $500,000 ($1,000,000 per married couple)?</label>@*change input/asp-for labels, make Yes or No option*@
	 <input type="text" name="IsNetWorthLowEnough" required placeholder="Is your net worth less than $500,000 ($1,000,000 per married couple)?" title="Please select yes or no." />
	 <br />
	 <label asp-for="ChooseMaritalStatus">Is your net worth less than $500,000 ($1,000,000 per married couple)?</label>@*change input/asp-for labels, add to RSVP model*@
	 <input type="text" name="IsNetWorthLowEnough" required placeholder="Is your net worth less than $500,000 ($1,000,000 per married couple)?" title="Please select yes or no." />
	 <br />
	 <label asp-for="ChooseMaritalStatus">Is your net worth less than $500,000 ($1,000,000 per married couple)?</label>@*change input/asp-for labels, make Yes or No option*@
	 <input type="text" name="IsNetWorthLowEnough" required placeholder="Is your net worth less than $500,000 ($1,000,000 per married couple)?" title="Please select yes or no." />
	 <br />
	 <input type="submit" value="Sign up" />

	 </form>