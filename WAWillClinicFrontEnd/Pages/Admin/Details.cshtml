@page
@model WAWillClinicFrontEnd.Pages.DetailsModel
@{
    ViewData["Title"] = "User Details";
    Layout = "_Layout";
}
<section></section>

<section class="form-border">
    <h2>User Details</h2>
    <form method="post">
        <label asp-for="Name">Full Name</label>
        <br />
        <input type="text" name="Name" value="@Model.Name" readonly />
        <br />
        <label asp-for="Email">Email Address</label>
        <br />
        <input type="email" name="Email" value="@Model.Email" readonly />
        <br />
        <label asp-for="Phone">Phone Number</label>
        <br />
        <input type="tel" name="Phone" value="@Model.Phone" readonly />
        <br />

        <label asp-for="IsVeteran">
            Are you, or your spouse, a veteran of the United States Armed
            Forces?
        </label>
        <br />

        @if (Model.IsVeteran)
        {
            <span>
                <input class="radioButton" type="radio" name="IsVeteran" value="true" checked disabled /> Yes
            </span>
            <span>
                <input class="radioButton" type="radio" name="IsVeteran" value="IsVeteran"  /> No <br />
            </span>
        }
        else
        {
            <span>
                <input class="radioButton" type="radio" name="IsVeteran" value="true" /> Yes
            </span>
            <span>
                <input class="radioButton" type="radio" name="IsVeteran" value="IsVeteran" checked disabled /> No <br />
            </span>
        }

        <br />

        <label asp-for="IsWashingtonResident">Are you a Washington state resident?</label>
        <br />

        @if (Model.IsWashingtonResident)
        {
            <span>
                <input class="radioButton" type="radio" name="IsWashingtonResident" value="True" checked disabled /> Yes
            </span>
            <span>
                <input class="radioButton" type="radio" name="IsWashingtonResident" value="False" disabled /> No <br />
            </span>
        }
        else
        {
            <span>
                <input class="radioButton" type="radio" name="IsWashingtonResident" value="True" disabled /> Yes
            </span>
            <span>
                <input class="radioButton" type="radio" name="IsWashingtonResident" value="False" checked disabled /> No <br />
            </span>
        }
        <br />

        <label asp-for="PreferredTime">Please indicate your preferred time to receive service.</label>
        <br />
        @if (Model.PreferredTime)
        {
            <span>
                <input class="radioButton" type="radio" name="PreferredTime" value="True" checked disabled /> Morning
            </span>
            <span>
                <input class="radioButton" type="radio" name="PreferredTime" value="False" disabled /> Afternoon
            </span>
        }
        else
        {
            <span>
                <input class="radioButton" type="radio" name="PreferredTime" value="True" disabled /> Morning
            </span>
            <span>
                <input class="radioButton" type="radio" name="PreferredTime" value="False" checked disabled /> Afternoon
            </span>
        }
        <br /><br />

        <label asp-for="ChooseMaritalStatus">What is your marital status?</label><br />
        <select asp-for="ChooseMaritalStatus" asp-items="Html.GetEnumSelectList<MaritalStatus>()" disabled></select>
        <span asp-validation-for="ChooseMaritalStatus"></span>
        <br />

        <label asp-for="SpouseName">Full legal name of your spouse</label><br />
        <input type="text" name="SpouseName" required value="@Model.SpouseName" readonly
               title="Please enter the full legal name of your spouse." />
        <span asp-validation-for="SpouseName"></span>
        <br />

        <label asp-for="HasChildren">Do you have any children?</label>
        <br />
        @if (Model.HasChildren)
        {
            <span>
                <input class="radioButton" type="radio" name="HasChildren" value="True" checked disabled />Yes
            </span>
            <span>
                <input class="radioButton" type="radio" name="HasChildren" value="False" disabled />No
            </span>
            <br />
        }
        else
        {
            <span>
                <input class="radioButton" type="radio" name="HasChildren" value="True" disabled />Yes
            </span>
            <span>
                <input class="radioButton" type="radio" name="HasChildren" value="False" checked disabled />No
            </span>
            <br />
        }

        <br />

        <label asp-for="IsCurrentlyPregnant">
            Do you have any minor children?
            Or, are you, your spouse, or your partner currently pregnant?
        </label>
        <br />

        @if (Model.IsCurrentlyPregnant)
        {
            <span>
                <input class="radioButton" type="radio" name="IsCurrentlyPregnant" value="True" checked /> Yes
            </span>
            <span>
                <input class="radioButton" type="radio" name="IsCurrentlyPregnant" value="False" /> No
            </span>
        }
        else
        {
            <span>
                <input class="radioButton" type="radio" name="IsCurrentlyPregnant" value="True" disabled /> Yes
            </span>
            <span>
                <input class="radioButton" type="radio" name="IsCurrentlyPregnant" value="False" checked disabled /> No
            </span>
        }
        <br /><br />

        <label asp-for="MinorChildName">Full legal name(s) of your MINOR child(ren).</label><br />
        <input type="text" name="MinorChildName" required value="@Model.MinorChildName" readonly
               title="Child's name." />
        <span asp-validation-for="MinorChildName"></span>
        <br />

        <label asp-for="ContRemBeneficiary">Contingent remainder beneficiary?</label>
        <select asp-for="ContRemBeneficiary" asp-items="Html.GetEnumSelectList<WhoToInheritEstate>()" disabled></select>
        <span asp-validation-for="ContRemBeneficiary"></span>
        <br />

        <label asp-for="PersonToInherit">Who would you like to inherit your estate when you die?</label>
        <select asp-for="PersonToInherit" asp-items="Html.GetEnumSelectList<WhoToInheritEstate>()" disabled></select>
        <span asp-validation-for="PersonToInherit"></span>
        <br />

        <label asp-for="PersonalRep">Whom do you wish to serve as your personal representative?</label>
        <select asp-for="PersonalRep" asp-items="Html.GetEnumSelectList<WhoToInheritEstate>()" disabled></select>
        <span asp-validation-for="PersonalRep"></span>
        <br />
        @if (!Model.CheckedIn)
        {
            <input type="submit" value="Check-In User" />
        }
        else
        {
            <input type="submit" value="Check-Out User" />

        }
    </form>
    <form method="get" asp-page="Edit">
        <input type="hidden" asp-for="ID" value="@Model.ID" />
        <input type="submit" value="Edit User" />
    </form>
</section>